<body>
  {{> navbar }}
  
    <br>
    <br>
	 <div class="card-header bg-success text-white" text="Listado de Usuarios">
         <br>
         <span>"PARCELAS {{parcela.direccion}}"</span>
       </div>
	<div class="container py-4">
		<div class="card bg-light">
			<div class="card-header" ></div>
			<div class="card-body">
				
				<ul class="list-group">
					<li class="list-group-item active">Parcela {{parcela.direccion}} </li>
					<li class="list-group-item">Largo: {{parcela.largo}}</li>
					<li class="list-group-item">Ancho: {{parcela.largo}}</li>

				</ul>
			
			</div>			
		</div>
		<br>
		<a class="btn btn-success" href="/dispositivo/nuevo/{{parcela._id}}" >Agregar Dispositivo</a>
		
		
		<br>
		<br>
		<table class="table table-striped table-bordered ">
			<thead class="thead-inverse bg-dark text-white">
				<tr>
					<th>Nombre</th>
					<th>Modelo</th>
					<th>NÂ° Fabricacion</th>
					<th>Entradas</th>
					<th>POSICION</th>
					<th>EDITAR</th>
					<th>ELIMINAR</th>

				</tr>
			</thead>
			 {{#each dispositivo}}
		
			  <tr class="bg-light" >
            <td>{{this.nombre}}</td> 
            <td>{{this.modelo}}</td>
            <td>{{this.fabricacion}}</td>
			<td>{{this.entradas}}</td>
			<td>{{this.posicion}}</td>
             <!--<td>{{this.date}}</td> -->
            <td><a class="btn btn-secondary"  href="/dispositivo/modificar/{{this._id}}">Modificar</a></td> 
            <td><a class="btn btn-danger" href="/dispositivo/eliminar/{{this._id}}">Eliminar</a></td> 
          </tr>   
		   {{/each}}    
			
		</table>
	</div>
	
	</div>
	
      {{> footer}}